doctype html
html
  head
    link(rel="icon" href="/images/favicon.png" type="image/png")

    style.
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f5f5f5;
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .container:hover {
        transform: scale(1.02);
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
      }
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
      }
      .header button, .header form button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s ease, transform 0.3s ease;
      }
      .header button:hover, .header form button:hover {
        background-color: #45a049;
        transform: translateY(-2px);
      }
      .section {
        margin-bottom: 40px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
      }
      .section:hover {
        background-color: #f1f1f1;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
      }
      .casa-container {
        margin-bottom: 20px;
        padding: 15px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .casa-container:hover {
        transform: scale(1.01);
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.15);
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        transition: transform 0.3s ease;
      }
      th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        transition: background-color 0.3s ease, color 0.3s ease;
      }
      th {
        background-color: #f2f2f2;
      }
      tr:hover td {
        background-color: #e9e9e9;
        color: #333;
      }
      a {
        color: #2196F3;
        text-decoration: none;
        transition: color 0.3s ease;
      }
      a:hover {
        color: #0b7dda;
      }
      img {
        max-width: 100%;
        height: auto;
        margin-top: 10px;
        border-radius: 4px;
        transition: transform 0.3s ease;
      }
      img:hover {
        transform: scale(1.05);
      }
      /* Additional styles for the form */
      form.w3-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
      }
      form.w3-container:hover {
        background-color: #f9f9f9;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
      }
      form.w3-container .w3-section {
        margin-bottom: 20px;
      }
      form.w3-container label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
      }
      form.w3-container input[type="text"], form.w3-container input[type="number"], form.w3-container textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
      }
      form.w3-container button[type="submit"], form.w3-container button.add-figura, form.w3-container button.add-casa {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s ease, transform 0.3s ease;
      }
      form.w3-container button[type="submit"]:hover, form.w3-container button.add-figura:hover, form.w3-container button.add-casa:hover {
        background-color: #45a049;
        transform: translateY(-2px);
      }

  body
    .container
      .w3-container.w3-pale-red
        .w3-card-4.w3-margin
          .w3-container.w3-padding.w3-white
            h1.w3-center.w3-padding-16 Adicionar Nova Rua
            form(action="/ruas/registo" method="post" enctype="multipart/form-data" class="w3-container w3-padding")
              .w3-section
                label(for="nome") Nome:
                input.w3-input.w3-border(type="text" id="nome" name="nome" required)
              .w3-section
                label(for="rua") Rua:
                input.w3-input.w3-border(type="text" id="rua" name="rua" required)
              .w3-section
                label(for="descricoes") Descrições:
                textarea.w3-input.w3-border(id="descricoes" name="descricoes" rows="5" required)
              .w3-section
                label Figuras:
                .figuras-container
                  .figura
                    label(for="figuras[0][id]") ID da Figura:
                    input.w3-input.w3-border(type="text" name="figuras[0][id]" )
                    label(for="figuras[0][imagem]") Selecione uma Figura:
                    input.w3-input.w3-border(type="file" name="myFile" required=true)
                    label(for="figuras[0][legenda]") Legenda da Figura:
                    input.w3-input.w3-border(type="text" name="figuras[0][legenda]" )
              .w3-section
                label Casas:
                .casas-container
                  .casa
                    label(for="casas[0][numero]") Número da Casa:
                    input.w3-input.w3-border(type="text" name="casas[0][numero]")
                    label(for="casas[0][enfiteutas]") Enfiteutas:
                    input.w3-input.w3-border(type="text" name="casas[0][enfiteutas]")
                    label(for="casas[0][foro]") Foro:
                    input.w3-input.w3-border(type="text" name="casas[0][foro]")
                    label(for="casas[0][desc]") Descrição da Casa:
                    textarea.w3-input.w3-border(name="casas[0][desc]" rows="3")
                    label(for="casas[0][vista]") Vista:
                    input.w3-input.w3-border(type="text" name="casas[0][vista]")
              button(type="submit" class="w3-button w3-green w3-margin-top") Adicionar Rua
