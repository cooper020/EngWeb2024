extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h1 #{periodo.nome}

      .w3-container

        ul.w3-ul.w3-card-4(style="width:50%")
          li  
            b Nome: #{periodo.nome}
          li  
            b Id: #{periodo.id}
          li
            b Compositores:   
            ul
              each compositor in compositores
                if compositor.periodo === periodo.id
                  li 
                    a(href="/compositores/") #{compositor.nome}

      footer.w3-container.w3-teal
        address 
          span Generated by EngWeb2024 in #{date} - [
            a(href="/periodos") Back
          span ]
