extends layout

block content
    .w3-card-4
        .w3-container.w3-indigo
            h1
                span Compositores List
                a.w3-btn.w3-round.w3-indigo(href="/compositores/registo") +
             
    .w3-container
        table.w3-table-all
            tr
                th Id
                th Name
                th Bio
                th dataNasc 
                th dataObito
                th periodo
                th Actions
            each compositor in lCompositores
                tr
                    td= compositor.id
                    td
                        a(href="/compositores/" + compositor.id)= compositor.nome   
                    td= compositor.bio
                    td= compositor.dataNasc
                    td= compositor.dataObito
                    td= compositor.periodo              
                    td
                        span [
                            a(href="/compositores/edit/" + compositor.id) Edit
                            span ]
                        span [
                            a(href="/compositores/delete/" + compositor.id) Delete
                            span ]
    
    footer.w3-container.w3-indigo
        h5 Generated by EW2024 in #{date}
